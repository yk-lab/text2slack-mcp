{
  "name": "text2slack-mcp",
  "version": "0.1.3",
  "description": "MCP server to send text messages to Slack.",
  "type": "module",
  "bin": {
    "text2slack-mcp": "dist/cli.js"
  },
  "scripts": {
    "prepare": "lefthook install",
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "pnpm clean",
    "start": "node dist/cli.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "pretest": "pnpm build",
    "test": "node --test test/**/*.test.js",
    "test:unit": "node --test test/services test/tools",
    "test:integration": "node --test test/integration/**/*.test.js",
    "test:watch": "node --test --watch",
    "test:coverage": "node --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info --test-reporter=junit --test-reporter-destination=junit.xml test/**/*.test.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "dotenv": "^17.0.0"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@types/node": "24.10.1",
    "cspell": "9.4.0",
    "lefthook": "2.0.8",
    "typescript": "5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yk-lab/text2slack-mcp.git"
  },
  "author": "yk-lab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yk-lab/text2slack-mcp/issues"
  },
  "homepage": "https://github.com/yk-lab/text2slack-mcp#readme",
  "keywords": [
    "mcp",
    "slack",
    "webhook",
    "integration"
  ]
}
